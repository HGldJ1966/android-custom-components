<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="Abel-Regular.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="Dosis-Medium.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="DancingScript-Bold.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="RobotoCondensed-Bold.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="ShadowsIntoLight.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="Lobster.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="ChangaOne-Regular.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="ComingSoon.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="JosefinSans-Regular.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="UbuntuCondensed-Regular.ttf" />

        <com.pixplicity.devfest.widgets.FontTextView
            style="@style/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="Unkempt-Regular.ttf" />
    </LinearLayout>

</ScrollView>